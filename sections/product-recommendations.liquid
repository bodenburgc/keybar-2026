<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }

  /* Force product card title and price to stack vertically */
  #shopify-section-{{ section.id }} .product-card__details {
    flex-direction: column;
    align-items: flex-start;
  }

  #shopify-section-{{ section.id }} .product-card__details > p {
    width: 100%;
  }

  /* Vendor styling - small, gray, uppercase */
  #shopify-section-{{ section.id }} .product-card__top a {
    font-size: 0.75rem;
    color: rgb(var(--color-foreground-secondary));
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-weight: 500;
  }

  /* Product title - large, bold, uppercase - use heading font (Gazzetta) */
  #shopify-section-{{ section.id }} .product-card__title {
    font-family: var(--font-heading-family);
    font-size: clamp(1.25rem, 2.5vw, 1.875rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin-bottom: 0.75rem;
    color: #2C4554;
  }

  /* Price - large, red/accent color */
  #shopify-section-{{ section.id }} .product-card__details .price {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: oklch(50% 0.18 15); /* Safety Red from brand colors */
    margin-bottom: 1rem;
  }

  /* Product description - show and style */
  #shopify-section-{{ section.id }} .product-card__description {
    font-size: clamp(0.6875rem, 1.2vw, 0.75rem);
    line-height: 1.4;
    color: rgb(var(--color-foreground-secondary));
    margin-top: 0;
  }

  /* Hide quick add button */
  #shopify-section-{{ section.id }} .quick-add {
    display: none;
  }

  /* Adjust card content spacing */
  #shopify-section-{{ section.id }} .product-card__content {
    gap: 0;
    padding-top: 1rem;
  }
</style>

{%- liquid
  # Track which product IDs we've already shown to avoid duplicates
  assign shown_ids = ','
  assign has_products = false

  # Check if current product is a shuttle and determine compatibility tag
  assign is_shuttle = false
  assign compatibility_tag = ''
  assign dynamic_heading = section.settings.heading

  for tag in product.tags
    assign tag_lower = tag | downcase
    if tag_lower == 'shuttle'
      assign is_shuttle = true
    endif
    if tag_lower == 'pro extreme'
      assign compatibility_tag = 'Pro Extreme'
    elsif tag_lower == 'pro lite'
      assign compatibility_tag = 'Pro Lite'
    elsif tag_lower == 'pro ultra lite'
      assign compatibility_tag = 'Pro Ultra Lite'
    endif
  endfor

  # Set dynamic heading for shuttles
  if is_shuttle and compatibility_tag != ''
    assign dynamic_heading = 'Compatible Accessories'
  endif
-%}

<div class="related-products block">
  <div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
    {%- comment -%} Check if product has collections {%- endcomment -%}
    {%- if product.collections.size > 0 -%}
      {%- assign has_products = true -%}
    {%- endif -%}

    {%- if has_products -%}
      <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative overflow-hidden md:overflow-visible">
        {%- capture indicators -%}
          <div class="indicators hidden lg:flex gap-2d5">
            <button class="button button--secondary" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {%- render 'icon', icon: 'chevron-left', class: 'transform' -%}
              </span>
            </button>
            <button class="button button--secondary" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
              <span class="btn-fill" data-fill></span>
              <span class="btn-text">
                {%- render 'icon', icon: 'chevron-right', class: 'transform' -%}
              </span>
            </button>
          </div>
        {%- endcapture -%}
        {%- render 'section-heading', section: section, section_button: indicators, heading: dynamic_heading -%}

        <slider-element id="Slider-{{ section.id }}" class="grid slider{% if section.settings.carousel_on_desktop %} slider--desktop{% endif %}{% if section.settings.swipe_on_mobile %} slider--tablet{% endif %}" selector=".card-grid>.card"{% if section.settings.carousel_on_desktop or section.settings.swipe_on_mobile %} tabindex="0"{% endif %}>
          <motion-list class="card-grid card-grid--{{ section.settings.columns }} mobile:card-grid--{{ section.settings.columns_mobile }} grid">
            {%- liquid
              assign count = 0

              # Loop through all collections this product belongs to
              for collection in product.collections
                # Loop through products in each collection
                for coll_product in collection.products
                  # Skip if it's the current product
                  if coll_product.id == product.id
                    continue
                  endif

                  # Skip if we've already shown this product
                  assign id_string = ',' | append: coll_product.id | append: ','
                  if shown_ids contains id_string
                    continue
                  endif

                  # If viewing a shuttle, filter to compatible products only
                  if is_shuttle and compatibility_tag != ''
                    # Check if this product has the compatibility tag (e.g., "Pro Extreme")
                    assign has_compatibility_tag = false
                    for coll_product_tag in coll_product.tags
                      if coll_product_tag == compatibility_tag
                        assign has_compatibility_tag = true
                        break
                      endif
                    endfor

                    # Skip if product doesn't have the compatibility tag
                    if has_compatibility_tag == false
                      continue
                    endif
                  endif

                  # Render the product card
                  render 'product-card', product: coll_product, product_id: coll_product.id, section_id: section.id, lazy_load: false, image_ratio: settings.product_image_ratio, image_fill: settings.product_image_fill, show_secondary_image: settings.product_secondary_image, show_vendor: true, show_card_description: true, show_rating: settings.product_rating, show_color_swatches: settings.product_color_swatches, show_countdown: settings.product_countdown, show_quick_add: false, show_quick_view: false, vertical_badges: settings.product_vertical_badges, show_sold_out: settings.product_sold_out, show_save_amount: settings.product_save_amount, save_type: settings.product_save_type, show_icon_list: settings.product_icon_list

                  # Mark this product as shown
                  assign shown_ids = shown_ids | append: coll_product.id | append: ','

                  # Increment counter and check limit
                  assign count = count | plus: 1
                  if count >= section.settings.product_limit
                    break
                  endif
                endfor

                # Break outer loop if we've reached the limit
                if count >= section.settings.product_limit
                  break
                endif
              endfor
            -%}
          </motion-list>

          {%- if section.settings.heading == blank and section.settings.subheading == blank and section.settings.description == blank -%}
            {%- if section.settings.carousel_on_desktop -%}
              <div class="indicators hidden lg:flex gap-2d5 items-center absolute top-0 left-0 w-full h-full pointer-events-none opacity-0 page-width">
                <button class="button button--primary pointer-events-auto" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
                  <span class="btn-fill" data-fill></span>
                  <span class="btn-text">
                    {%- render 'icon', icon: 'chevron-left', class: 'stroke-2 transform' -%}
                  </span>
                </button>
                <button class="button button--primary pointer-events-auto" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
                  <span class="btn-fill" data-fill></span>
                  <span class="btn-text">
                    {%- render 'icon', icon: 'chevron-right', class: 'stroke-2 transform' -%}
                  </span>
                </button>
              </div>
            {%- endif -%}
          {%- endif -%}
        </slider-element>
      </div>
    {%- endif -%}
  </div>
</div>

