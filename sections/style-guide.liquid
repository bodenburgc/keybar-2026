<style>
  .style-guide {
    --sg-section-gap: clamp(3rem, 6vw, 5rem);
    --sg-item-gap: clamp(1.5rem, 3vw, 2.5rem);
  }
  .style-guide-nav {
    position: sticky;
    top: 0;
    z-index: 50;
    background: rgb(var(--color-background) / 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgb(var(--color-foreground) / 0.1);
    padding: var(--sp-4) 0;
  }
  .style-guide-nav__links {
    display: flex;
    gap: var(--sp-6);
    overflow-x: auto;
    padding: 0 var(--sp-4);
    scrollbar-width: none;
  }
  .style-guide-nav__links::-webkit-scrollbar { display: none; }
  .style-guide-nav__link {
    white-space: nowrap;
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgb(var(--color-foreground) / 0.6);
    transition: color 0.2s;
  }
  .style-guide-nav__link:hover { color: rgb(var(--color-foreground)); }

  .sg-section {
    padding: var(--sg-section-gap) 0;
    border-bottom: 1px solid rgb(var(--color-foreground) / 0.1);
  }
  .sg-section:last-child { border-bottom: none; }
  .sg-section__title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: var(--font-bold);
    margin-bottom: var(--sp-2);
  }
  .sg-section__desc {
    color: rgb(var(--color-foreground) / 0.6);
    margin-bottom: var(--sg-item-gap);
    max-width: 60ch;
  }

  .sg-color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--sp-4);
  }
  .sg-color-card {
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgb(var(--color-foreground) / 0.1);
  }
  .sg-color-swatch {
    height: 100px;
    display: flex;
    align-items: flex-end;
    padding: var(--sp-3);
  }
  .sg-color-info {
    padding: var(--sp-3);
    background: rgb(var(--color-background));
  }
  .sg-color-name {
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
  }
  .sg-color-hex {
    font-family: monospace;
    font-size: var(--text-xs);
    color: rgb(var(--color-foreground) / 0.6);
  }

  .sg-type-sample {
    margin-bottom: var(--sp-6);
    padding-bottom: var(--sp-6);
    border-bottom: 1px solid rgb(var(--color-foreground) / 0.05);
  }
  .sg-type-label {
    font-family: monospace;
    font-size: var(--text-xs);
    color: rgb(var(--color-foreground) / 0.5);
    margin-bottom: var(--sp-2);
  }

  .sg-button-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sp-4);
    align-items: center;
  }

  .sg-scheme-preview {
    padding: var(--sp-8);
    border-radius: var(--radius-xl);
    margin-bottom: var(--sp-6);
  }
  .sg-scheme-preview--light {
    background: #FFFFFF;
    color: #1C1F22;
    border: 1px solid rgb(var(--color-foreground) / 0.1);
  }
  .sg-scheme-preview--dark {
    background: #1C1F22;
    color: #FFFFFF;
  }
  .sg-scheme-preview--accent {
    background: #FFD700;
    color: #1C1F22;
  }
  .sg-scheme-label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--sp-4);
    opacity: 0.6;
  }
  .sg-scheme-title {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: var(--font-bold);
    margin-bottom: var(--sp-2);
  }
  .sg-scheme-vendor {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--sp-1);
  }
  .sg-scheme-price {
    font-size: var(--text-sm);
  }

