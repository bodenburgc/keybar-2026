  .sg-scheme-preview--dark .sg-scheme-title { color: #FFF8E7; }
  .sg-scheme-preview--dark .sg-scheme-vendor { color: #CD9650; }
  .sg-scheme-preview--dark .sg-scheme-price { color: #C8C4BC; }

  .sg-logo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--sp-6);
  }
  .sg-logo-card {
    padding: var(--sp-8);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 150px;
  }
  .sg-logo-card--light {
    background: #FFFFFF;
    border: 1px solid rgb(var(--color-foreground) / 0.1);
  }
  .sg-logo-card--dark {
    background: #1C1F22;
  }
  .sg-logo-card--gold {
    background: #FFD700;
  }
  .sg-logo-card img, .sg-logo-card svg {
    max-width: 180px;
    max-height: 80px;
    object-fit: contain;
  }

  .sg-badge-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--sp-3);
    align-items: center;
  }
  .sg-badge {
    padding: var(--sp-1) var(--sp-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .sg-badge--gold { background: #FFD700; color: #1C1F22; }
  .sg-badge--dark { background: #1C1F22; color: #FFFFFF; }
  .sg-badge--orange { background: #FF8C00; color: #FFFFFF; }
  .sg-badge--green { background: #22C55E; color: #FFFFFF; }
  .sg-badge--red { background: #DC2626; color: #FFFFFF; }

  .sg-spacing-demo {
    display: flex;
    gap: var(--sp-4);
    flex-wrap: wrap;
  }
  .sg-spacing-box {
    background: rgb(var(--color-foreground) / 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: monospace;
    font-size: var(--text-xs);
