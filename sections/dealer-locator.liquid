{%- liquid
  assign map_api_key = section.settings.map_api_key
  assign default_radius = section.settings.default_radius | default: 100
-%}

<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
  }
</style>

{{ 'dealer-locator.css' | asset_url | stylesheet_tag }}

<script>
  window.dealerLocatorStrings = {
    searchPlaceholder: {{ 'sections.dealer_locator.search_placeholder' | t | json }},
    searchButton: {{ 'sections.dealer_locator.search_button' | t | json }},
    useLocation: {{ 'sections.dealer_locator.use_location' | t | json }},
    locating: {{ 'sections.dealer_locator.locating' | t | json }},
    searching: {{ 'sections.dealer_locator.searching' | t | json }},
    showingAll: {{ 'sections.dealer_locator.showing_all' | t | json }},
    showingResults: {{ 'sections.dealer_locator.showing_results' | t | json }},
    showingClosest: {{ 'sections.dealer_locator.showing_closest' | t | json }},
    noResults: {{ 'sections.dealer_locator.no_results' | t | json }},
    searchError: {{ 'sections.dealer_locator.search_error' | t | json }},
    locationDenied: {{ 'sections.dealer_locator.location_denied' | t | json }},
    locationUnavailable: {{ 'sections.dealer_locator.location_unavailable' | t | json }},
    getDirections: {{ 'sections.dealer_locator.get_directions' | t | json }},
    website: {{ 'sections.dealer_locator.website' | t | json }},
    milesAway: {{ 'sections.dealer_locator.miles_away' | t | json }},
    mapError: {{ 'sections.dealer_locator.map_error' | t | json }}
  };
</script>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}">
  <div class="page-width">
    {%- comment -%} Section Heading {%- endcomment -%}
    {%- if section.settings.heading != blank or section.settings.description != blank -%}
      <div class="title-wrapper leading-none gap-4 flex flex-col items-start mb-8">
        {%- if section.settings.heading != blank -%}
          <{{ section.settings.heading_tag }} class="heading {{ section.settings.heading_size }}">
            <split-words class="split-words js-invisible block" data-animate="fade-up-large">{{ section.settings.heading }}</split-words>
          </{{ section.settings.heading_tag }}>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="description rte leading-normal subtext-lg max-w-prose">
            {{- section.settings.description -}}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Search Form {%- endcomment -%}
    <div class="dealer-locator__search flex flex-wrap gap-3 mb-6" data-dealer-search>
      <button
        type="button"
        class="button button--secondary"
        is="hover-button"
        data-dealer-geolocation
        aria-label="{{ 'sections.dealer_locator.use_location' | t }}"
      >
        <span class="btn-fill" data-fill></span>
        <span class="btn-text inline-flex items-center gap-2">
          {%- render 'icon', icon: 'location', size: 'sm' -%}
          <span data-geolocation-text>{{ 'sections.dealer_locator.use_location' | t }}</span>
        </span>
      </button>

      <div class="field flex-1 min-w-[200px]">
        <input
          type="text"
          id="dealer-search-{{ section.id }}"
          class="input"
          placeholder="{{ 'sections.dealer_locator.search_placeholder' | t }}"
          data-dealer-search-input
          autocomplete="off"
        >
      </div>

      <div class="field w-auto">
        <select
          id="dealer-radius-{{ section.id }}"
          class="select"
          data-dealer-radius
        >
          <option value="closest"{% if default_radius == 'closest' %} selected{% endif %}>Closest</option>
          <option value="50"{% if default_radius == 50 %} selected{% endif %}>50 miles</option>
          <option value="100"{% if default_radius == 100 %} selected{% endif %}>100 miles</option>
          <option value="250"{% if default_radius == 250 %} selected{% endif %}>250 miles</option>
          <option value="500"{% if default_radius == 500 %} selected{% endif %}>500 miles</option>
        </select>
      </div>

      <button
        type="button"
        class="button button--primary"
        is="hover-button"
        data-dealer-search-button
      >
        <span class="btn-fill" data-fill></span>
        <span class="btn-text inline-flex items-center gap-2">
          {%- render 'icon', icon: 'search', size: 'sm' -%}
          <span data-search-text>{{ 'sections.dealer_locator.search_button' | t }}</span>
        </span>
      </button>
    </div>

    {%- comment -%} Results Info {%- endcomment -%}
    <div
      class="dealer-locator__results-info text-sm text-opacity mb-4"
      data-dealer-results-info
    >
      <!-- Updated by JavaScript -->
    </div>

    {%- comment -%} Error/No Results Message {%- endcomment -%}
    <div
      class="dealer-locator__message alert alert--warning mb-4"
      data-dealer-message
      hidden
    >
      <!-- Updated by JavaScript -->
    </div>

    {%- comment -%} Two Column Layout: List (1/3) + Map (2/3) {%- endcomment -%}
    <div class="dealer-locator__content grid lg:grid-cols-3 gap-8">
      {%- comment -%} Dealer List {%- endcomment -%}
      <div class="dealer-locator__list-wrapper order-2 lg:order-1 lg:col-span-1">
        <ul
          class="dealer-locator__list grid gap-4"
          data-dealer-list
          role="list"
        >
          {%- comment -%} Dealer items populated by JavaScript {%- endcomment -%}
        </ul>
      </div>

      {%- comment -%} Map {%- endcomment -%}
      <div class="dealer-locator__map-wrapper order-1 lg:order-2 lg:col-span-2 lg:sticky lg:top-4 lg:self-start">
        <div
          class="dealer-locator__map rounded overflow-hidden"
          data-dealer-map
          data-api-key="{{ map_api_key }}"
          data-default-lat="{{ section.settings.default_lat | default: '46.0' }}"
          data-default-lng="{{ section.settings.default_lng | default: '-94.0' }}"
          data-default-zoom="{{ section.settings.default_zoom | default: 5 }}"
          data-marker-color="{{ section.settings.marker_color | default: '#D32F2F' }}"
          data-map-style="{{ section.settings.map_style | default: 'dark' }}"
        >
          <div class="dealer-locator__map-loading flex items-center justify-center h-full bg-current/5">
            <span class="text-opacity">{{ 'sections.dealer_locator.loading_map' | t | default: 'Loading map...' }}</span>
          </div>
        </div>

