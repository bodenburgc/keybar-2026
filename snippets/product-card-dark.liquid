{%- doc -%}
  Dark mode product card styling.
  Outputs scoped CSS for dark product cards.
  Ensures consistent styling across all sections using dark scheme.

  @param section_id - The section ID for scoping CSS

  @example
  {%- render 'product-card-dark', section_id: section.id -%}
{%- enddoc -%}

/* Product card - dark with subtle border */
#shopify-section-{{ section_id }} .product-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 8px;
  transition: all 0.3s ease;
  overflow: hidden;
}

#shopify-section-{{ section_id }} .product-card:hover {
  border-color: rgba(var(--color-highlight), 0.3);
  transform: translateY(-4px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
}

/* Product image container */
#shopify-section-{{ section_id }} .product-card__media {
  background: rgb(var(--color-background));
  border-radius: 8px 8px 0 0;
  overflow: hidden;
}

/* Vendor styling - small, muted highlight */
#shopify-section-{{ section_id }} .product-card__top a {
  font-size: 0.7rem;
  color: rgba(var(--color-highlight), 0.6);
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-weight: 600;
}

/* Product title */
#shopify-section-{{ section_id }} .product-card__title {
  font-family: var(--font-heading-family);
  font-size: clamp(0.9rem, 1.5vw, 1.1rem);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  line-height: 1.3;
  color: rgb(var(--color-foreground));
}

/* Price - highlight color */
#shopify-section-{{ section_id }} .product-card__details .price {
  font-size: clamp(1.1rem, 2vw, 1.3rem);
  font-weight: 700;
  color: rgb(var(--color-highlight));
}

/* Compare at price (strikethrough) */
#shopify-section-{{ section_id }} .product-card__details .price s {
  color: rgba(var(--color-foreground), 0.4);
}

/* Card content padding */
#shopify-section-{{ section_id }} .product-card__content {
  gap: 0;
  padding: 1rem 1rem 1.25rem;
}

/* Stack title and price vertically */
#shopify-section-{{ section_id }} .product-card__details {
  flex-direction: column;
  align-items: flex-start;
}

#shopify-section-{{ section_id }} .product-card__details > p {
  width: 100%;
}

/* Product description - subtle */
#shopify-section-{{ section_id }} .product-card__description {
  font-size: 0.8rem;
  line-height: 1.5;
  color: rgba(var(--color-foreground), 0.6);
  margin-top: 0.5rem;
}

/* Hide quick add button in dark mode */
#shopify-section-{{ section_id }} .product-card__quick-add {
  display: none;
}

/* Hide quick view button */
#shopify-section-{{ section_id }} .product-card__quick-view {
  display: none;
}

/* Sale badge */
#shopify-section-{{ section_id }} .badge--sale {
  background: rgb(var(--color-highlight));
  color: rgb(var(--color-button-text));
  font-weight: 700;
}

/* Sold out badge */
#shopify-section-{{ section_id }} .badge--soldout {
  background: rgba(var(--color-foreground), 0.2);
  color: rgb(var(--color-foreground));
}
